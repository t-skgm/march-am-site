---
import '../styles/global.css'
import '@fontsource/lora'
import Header from '../components/molecules/Header.astro'
import Logo from '../components/molecules/Logo.astro'
import Footer from '../components/molecules/Footer.astro'
import { site } from '../constants/site'

export interface Props {
  title: string
  frontmatter?: any
}

const { title, frontmatter } = Astro.props
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? frontmatter?.title} - {site.title}</title>
  </head>
  <body>
    <Logo />
    <Header />
    <div class="content">
      <slot />
    </div>
    <Footer />
    <div class="bird"></div>
  </body>
</html>

<style>
  body {
    background: repeat-y 0 / 50px url(/assets/images/back_gr.jpg),
      repeat-y right 0% / 38px url(/assets/images/back_or.jpg);
    background-color: #fff;
  }

  .content {
    @apply px-2;
    background-color: rgb(247, 248, 247, 0.75);
    margin: 0 50px 0 40px;
    padding-bottom: 10rem;
  }

  .bird {
    @apply block fixed;
    content: '';
    bottom: 20px;
    left: 7px;
    width: 60px;
    height: 60px;
    transform: scale(-1, 1);
    background: no-repeat 0 / 60px url(/assets/images/bird_s.png);
  }

  @media screen(lg) {
    body {
      background: repeat-y 0 / 300px url(/assets/images/back_gr.jpg),
        repeat-y right 0 url(/assets/images/back_or.jpg);
    }

    .content {
      @apply px-10 pt-10 my-0;
      margin-left: 300px;
      margin-right: 250px;
    }

    .bird {
      bottom: 60px;
      left: 60px;
      width: 120px;
      height: 120px;
      transform: scale(-1, 1);
      background-size: 120px;
    }
  }
</style>
