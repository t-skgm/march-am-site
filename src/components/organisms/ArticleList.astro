---
import { routes } from '../../constants/routes'
import type { ArticleEntry } from '../../infra/contentful/article'
import ListItem from '../molecules/ListItem.astro'

export type Props = {
  entries: ArticleEntry[]
}
const { entries } = Astro.props
---

<ul class="grid grid-cols-1 gap-4 p-0">
  {
    entries.map((e) => (
      <ListItem title={e.title} date={e.postedAt} href={routes.article.slug(e.slug)} />
    ))
  }
</ul>

<style></style>
