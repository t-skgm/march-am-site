---
export interface Props {
  current?: 'index' | 'blog' | 'about'
}

const { current } = Astro.props
const withActive = (page: Props['current']) => (page === current ? 'no-underline' : 'underline')
---

<nav class="flex items-center justify-between mb-6" aria-label="Global">
  <div class="flex lg:flex-1">
    <a href="#" class="-m-1.5 p-1.5">
      <span class="sr-only">Top</span>
      <span class="text-5xl">🏙</span>
    </a>
  </div>
  <div class="lg:flex lg:gap-x-12">
    <a
      href="/blog"
      class:list={['text-sm', 'font-semibold', 'leading-6', 'text-gray-900', withActive('blog')]}
      >Blog</a
    >
    <a
      href="/about"
      class:list={['text-sm', 'font-semibold', 'leading-6', 'text-gray-900', withActive('about')]}
      >About</a
    >
  </div>
</nav>
