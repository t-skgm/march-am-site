---
import logo from '/assets/logo.svg'
---

<div class="logo">
  <a href="/">
    <img src={logo} width="80" alt="march-am" />
  </a>
</div>

<style>
  .logo {
    @apply absolute;
    top: theme(spacing.4);
    left: -10px;
  }

  .logo img {
    width: 55px;
  }

  @media screen(lg) {
    .logo {
      width: 80px;
      top: theme(spacing.16);
      left: theme(spacing.48);
    }

    .logo img {
      width: 80px;
    }
  }
</style>
