---
import { CollectionEntry, getCollection } from 'astro:content'
import Main from '../../components/molecules/Main.astro'
import { routes } from '../../constants/routes'
import Layout from '../../layouts/Layout.astro'
import { formatDate } from '../../utils/date'

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog')
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }))
}

export type Props = {
  entry: CollectionEntry<'blog'>
}

const { entry } = Astro.props
const { Content } = await entry.render()
const { title, postedAt, category, tags } = entry.data
---

<Layout title={title}>
  <Main>
    <header>
      <h1 class="text-3xl font-bold break-all">
        <a href={routes.article.slug(entry.slug)}>{title}</a>
      </h1>
    </header>

    <div class="mt-6">
      <a href={routes.article.category.page(category)}>{category}</a> | {formatDate(postedAt)}
    </div>
    {
      tags && (
        <div>
          tags:
          {tags.map((tag) => (
            <a href={routes.article.tag.page(tag)}>{tag}</a>
          ))}
        </div>
      )
    }

    <article class="post-content mt-10">
      <Content />
    </article>
  </Main>
</Layout>

<style is:global lang="scss">
  .post-content {
    ul,
    ol {
      @apply mr-0 pr-0;
    }

    ul ol,
    ol ul,
    ul ul {
      margin: 0;
    }

    // iframe: YouTube
    iframe.youtube {
      max-width: 100%;
      height: 100%;
    }
  }
</style>
