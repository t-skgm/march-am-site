---
import { routes } from '../constants/routes'
import type { Article } from '../infra/contentful/interfaces'
import ListItem from '../components/molecules/ListItem.astro'
import FullwidthCard from '../components/molecules/FullwidthCard.astro'

export type Props = {
  entries: Article[]
  fullwidth?: boolean
}
const { entries, fullwidth } = Astro.props
---

<ul class="grid grid-cols-1 gap-4 p-0" data-pagefind-ignore="all">
  {
    entries.map((e) =>
      fullwidth != null ? (
        <FullwidthCard entry={e} linkMapper={routes.article.slug} />
      ) : (
        <ListItem title={e.title} date={e.postedAt} href={routes.article.slug(e.slug)} />
      )
    )
  }
</ul>

<style></style>
