---
import { routes } from '../constants/routes'
import type { Article } from '../infra/contentful/interfaces'
import { formatDateJp } from '../utils/date'

export type Props = {
  entry: Article
}

const { entry } = Astro.props
const { title, postedAt, category, tags, thumbnail, slug, content } = entry
---

<div data-pagefind-body>
  <header>
    {thumbnail != null && <img src={thumbnail} alt={`Eye catch of ${title}`} class="mb-8" data-pagefind-ignore />}
    <h1 class="text-3xl font-bold break-all" data-pagefind-meta="title">
      <a href={routes.article.slug(slug)}>{title}</a>
    </h1>
  </header>

  <div class="mt-6 mb-2" data-pagefind-ignore>
    <a href={routes.article.category.page(category)} class="uppercase no-underline hover:underline"
      >{category}</a
    > | {formatDateJp(postedAt)}
  </div>
  {
    tags != null && (
      <div class="tag-list" data-pagefind-ignore>
        {tags.map((tag) => (
          <a href={routes.article.tag.page(tag)} class="tag" data-pagefind-filter="tag">
            {tag}
          </a>
        ))}
      </div>
    )
  }

  <article class="post-content mt-10" set:html={content} />
</div>

<style is:global>
  @reference '../styles/global.css';

  .post-content {
    ul,
    ol {
      @apply mr-0 pr-0;
    }

    ul ol,
    ol ul,
    ul ul {
      margin: 0;
    }

    img {
      @apply h-auto max-w-full;
    }

    /* iframe: YouTube */
    iframe.youtube,
    iframe[src^='https://www.youtube.com'] {
      @apply h-full max-w-full;
      aspect-ratio: 16 / 9;
    }

    iframe[src^='https://bandcamp.com/'] {
      @apply my-6;
    }
  }

  .tag-list {
    @apply flex gap-4 my-6;
  }

  .tag {
    @apply no-underline hover:underline flex items-center;

    &::before {
      @apply h-4 w-4 inline-block mr-2;
      content: '';
      background: url(../assets/images/icons/tag.svg);
    }
  }
</style>
